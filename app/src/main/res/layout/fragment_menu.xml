<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.piniti.platform.MenuFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="10">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Creating"
                android:background="@drawable/round_button"
                android:layout_margin="5dp"
                android:textAllCaps="false"/>

            <View
                android:layout_width="500dp"
                android:layout_height="1dp"
                android:background="@color/lightgray"
                android:elevation="7dp"
                android:layout_marginTop="5dp"
                android:outlineAmbientShadowColor="@color/black"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:clipToPadding="false"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:background="@null"
                            android:src="@drawable/ercleshape"/>
                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:background="@null"
                            android:src="@drawable/ercleshape"/>
                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:background="@null"
                            android:src="@drawable/ercleshape"/>
                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:background="@null"
                            android:src="@drawable/ercleshape"/>
                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:background="@null"
                            android:src="@drawable/ercleshape"/>
                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:background="@null"
                            android:src="@drawable/ercleshape"/>
                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:background="@null"
                            android:src="@drawable/ercleshape"/>
                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:background="@null"
                            android:src="@drawable/ercleshape"/>
                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:background="@null"
                            android:src="@drawable/ercleshape"/>

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:weightSum="4">
                        <ImageView
                            android:id="@+id/people"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/people"/>
                        <ImageView
                            android:id="@+id/learn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/learn"/>
                        <ImageView
                            android:id="@+id/project"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/project"/>
                        <ImageView
                            android:id="@+id/market"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/market"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="70dp"
                        android:weightSum="4">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text="People"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Learn"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Project"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Market"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center"
                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:weightSum="4">
                        <ImageView
                            android:id="@+id/service"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/service"/>
                        <ImageView
                            android:id="@+id/fund"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/fund"/>
                        <ImageView
                            android:id="@+id/team"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/team"/>
                        <ImageView
                            android:id="@+id/fun"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/fun"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="70dp"
                        android:weightSum="4">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text="Service"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Fund"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Team"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Fun"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center"
                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:weightSum="4">
                        <ImageView
                            android:id="@+id/places"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/places"/>
                        <ImageView
                            android:id="@+id/event"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/event"/>
                        <ImageView
                            android:id="@+id/orgs"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/organization"/>
                        <ImageView
                            android:id="@+id/tools"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/tools"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="70dp"
                        android:weightSum="4">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text="Places"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Event"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Orgs"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Tools"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center"
                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
