<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"
                        />

                    <gradient
                        android:startColor="#FFFFFF"
                        android:endColor="#FFFFFF"
                        android:angle="270" />
                    <stroke
                        android:width="1dp"
                        android:color="#2B2929" />
                    <corners
                        android:radius="5dp" />
                </shape>
            </item>

            <item>

                <bitmap
                    android:gravity="center|right"
                    android:src="@drawable/dropdown_blue1"/>
            </item>

        </layer-list>
    </item>
</selector>